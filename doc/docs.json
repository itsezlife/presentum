{
  "$schema": "https://mintlify.com/docs.json",
  "name": "Presentum",
  "description": "A declarative Flutter engine for building dynamic, conditional UI at scale",
  "theme": "mint",
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "favicon": "/favicon.svg",
  "colors": {
    "primary": "#16A34A",
    "light": "#07C983",
    "dark": "#15803D"
  },
  "navigation": {
    "tabs": [
      {
        "tab": "Documentation",
        "groups": [
          {
            "group": "Getting started",
            "pages": ["introduction", "installation", "quickstart"]
          },
          {
            "group": "Core concepts",
            "pages": [
              "core-concepts/overview",
              "core-concepts/surfaces",
              "core-concepts/payloads-options-items",
              "core-concepts/slots-state",
              "core-concepts/guards",
              "core-concepts/storage",
              "core-concepts/outlets"
            ]
          },
          {
            "group": "Guides",
            "pages": [
              "guides/implementing-guards",
              "guides/implementing-storage",
              "guides/building-outlets",
              "guides/state-management"
            ]
          },
          {
            "group": "Features",
            "pages": [
              "features/eligibility-system",
              "features/events",
              "features/transition-observers",
              "features/inherited-widgets"
            ]
          },
          {
            "group": "Recipes",
            "pages": [
              "recipes/remote-config",
              "recipes/happy-new-year",
              "recipes/milestone-fullscreen-dialog",
              "recipes/user-preferences-feature-toggles"
            ]
          },
          {
            "group": "Advanced",
            "pages": ["advanced/surface-observers", "advanced/popup-hosts"]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "GitHub",
          "icon": "github",
          "href": "https://github.com/itsezlife/presentum"
        },
        {
          "anchor": "pub.dev",
          "icon": "box",
          "href": "https://pub.dev/packages/presentum"
        },
        {
          "anchor": "Ultimate production-ready example app",
          "icon": "rocket",
          "href": "https://example.presentum.dev"
        }
      ]
    }
  },
  "navbar": {
    "links": [
      {
        "label": "Discussions",
        "href": "https://github.com/itsezlife/presentum/discussions"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Get Started",
      "href": "/quickstart"
    }
  },
  "contextual": {
    "options": [
      "copy",
      "view",
      "chatgpt",
      "claude",
      "perplexity",
      "mcp",
      "cursor",
      "vscode"
    ]
  },
  "footer": {
    "socials": {
      "github": "https://github.com/itsezlife/presentum"
    }
  }
}
